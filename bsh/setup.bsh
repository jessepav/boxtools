import com.elektrika.boxtools.*;
import com.box.sdk.*;

import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

Path authPropsPath = Paths.get("..\\config\\boxtools-auth.properties", new String[0]);
BoxAuth auth = new BoxAuth(authPropsPath);
BoxAPIConnection api = null;

void createApi() {
    api = auth.createAPIConnection();
}

void saveTokens() {
    auth.saveTokens(api);
}
